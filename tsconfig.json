{
  "compilerOptions": {
    // "module": "commonjs",
    "target": "es5",
    "outFile": "bin/js/game.js",
    "outDir": "bin/js",
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": false,
    "allowJs": true
  },
  "include": [
    "libs/**/*.ts",
    "declares/declare_all.ts",
    "declares/declare_main.ts",
    "src/init.ts",
    "src/base/**/*.ts",
    "src/gen/layaUI.max.all.ts",
    "src/gen/layaUIRegister.js",
    "src/*/**/*.ts",
    "src/Main.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
